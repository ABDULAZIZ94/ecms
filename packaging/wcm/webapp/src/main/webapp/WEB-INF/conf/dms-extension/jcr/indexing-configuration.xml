<?xml version="1.0"?>
<!DOCTYPE configuration SYSTEM "http://www.exoplatform.org/dtd/indexing-configuration-1.0.dtd">
<configuration  xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
				xmlns:jcr="http://www.jcp.org/jcr/1.0"
				xmlns:gtn="http://www.gatein.org/jcr/gatein/1.0/"
				xmlns:exo="http://www.exoplatform.com/jcr/exo/1.0">

	<!-- ECMS: Files -->
	<index-rule nodeType="nt:file"> 
		<property boost="3.0">exo:name</property>
  		<property boost="3.0">exo:title</property>
  	</index-rule>	
 	
 	<!-- ECMS: Documents = web content -->
 	<index-rule nodeType="exo:link"> 
		<property boost="3.0">exo:name</property>
  		<property boost="3.0">exo:title</property>
  		<!-- Document: link url -->
  		<property boost="3.0">exo:linkURL</property>
 	</index-rule>
 	<!-- ECMS: Documents = web link -->
 	<index-rule nodeType="exo:webContent"> 
		<property boost="3.0">exo:name</property>
  		<property boost="3.0">exo:title</property>
 	</index-rule>
 	<!-- ECMS: Documents = announcement -->
 	<index-rule nodeType="exo:announcement"> 
		<property boost="3.0">exo:name</property>
  		<property boost="3.0">exo:title</property>
 	</index-rule>
 	<!-- ECMS: Documents = illustrated webcontent -->
 	<index-rule nodeType="exo:pictureOnHeadWebcontent"> 
		<property boost="3.0">exo:name</property>
  		<property boost="3.0">exo:title</property>
 	</index-rule>
 	
 	<!-- ECMS: Pages -->
 	<index-rule nodeType="gtn:language"> 
		<!-- Page: page name -->
  		<property boost="3.0">gtn:name</property>
	</index-rule>
 	
 	<!-- ECMS: all content types -->
  	<index-rule nodeType="nt:resource">	
  		<!-- File: content (jcr:data) -->
 		<property boost="1.5">jcr:data</property>
 		<!-- File: mimeType (jcr:mimeType) -->
 		<property boost="2.0">jcr:mimeType</property>
 	</index-rule>
 	
</configuration>