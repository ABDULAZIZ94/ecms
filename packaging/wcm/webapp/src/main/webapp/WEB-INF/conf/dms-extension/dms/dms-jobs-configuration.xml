<?xml version="1.0" encoding="ISO-8859-1"?>
<configuration
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd http://www.exoplatform.org/xml/ns/kernel_1_2.xsd"
   xmlns="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd">

  <external-component-plugins>
      <target-component>org.exoplatform.services.scheduler.JobSchedulerService</target-component>
      <component-plugin>
        <name>ClearOrphanSymlinksJob</name>
        <set-method>addCronJob</set-method>
        <type>org.exoplatform.services.jobs.symlink.ClearOrphanSymlinksCronJob</type>
        <description>add to the JobSchedulerService a job which cleans all the unassigned symlinks</description>
        <init-params>
          <properties-param>
            <name>cronjob.info</name>
            <description>symlink job</description>
            <property name="jobName" value="symlinkJob" />
            <property name="groupName" value="group" />
            <property name="job" value="org.exoplatform.services.jobs.symlink.ClearOrphanSymlinksCronJobImpl" />
            <property name="expression" value="${wcm.linkjob.cron.expression:0 30 1 * * ?}" />
          </properties-param>
        </init-params>
      </component-plugin>


  </external-component-plugins>
    
</configuration>
  
