<% 
	import org.exoplatform.webui.form.UIFormInputBase;
	import org.exoplatform.webui.form.UIForm;
	
	def uiform = uicomponent.getChild(UIForm.class);
	String fieldName; %>
<div class="UIPermissionManager" onkeypress="javascript:SubmitAction.call(this, event);">
	<div class="resizable">
		<% uicomponent.renderChildren();%>
	</div>
	<%// start render action%>
	<div class="uiAction uiActionBorder"> 
		<%
		 String closeActionLabel = _ctx.appRes(uiform.getName() + ".action.Close");
		 String actionLink = uiform.event("Close");
		%>
		<button href="javascript:void(0);" onclick="$actionLink" class="btn">$closeActionLabel</button>
	</div>
	<%// end render action%>
</div>

